<%- include('../partials/header') %>

<form class="racquet-form" method="POST" action="/reviews/<%= review._id %>?_method=PUT">
    <h1>Edit Review</h1><br>
    <div class="form-group">
        <label for="title">Review Title:</label>
        <input value="<%= review.title %>" type="text" class="form-control" name="title"></input>
      </div>
    <div class="horizontal-form">
      <div class="form-group col-md-4">
          <label for="groundRating">Ground Strokes:</label>
          <select name="groundRating" class="form-control">
            <option selected hidden disabled value="<%= review.groundRating %>"><%= review.groundRating %></option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select>
      </div>
      <div class="form-group col-md-4">
          <label for="volleyRating">Volleys:</label>
          <select name="volleyRating" class="form-control">
            <option selected hidden disabled value="<%= review.volleyRating %>"><%= review.volleyRating %></option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select>
      </div>
      <div class="form-group col-md-4">
          <label for="serveRating">Serves:</label>
          <select name="groundRating" class="form-control">
            <option selected hidden disabled value="<%= review.serveRating %>"><%= review.serveRating %></option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select>
     </div>
  </div>
      <div class="form-group">
          <label for="content">Review:</label>
          <textarea class="form-control" name="content" maxlength="160" rows="4" cols="1"><%= review.content %></textarea>
      </div>
      <button class="btn-primary" type="submit">Update Review</button>
  </form>

<%- include('../partials/footer') %>